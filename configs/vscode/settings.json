{
  "_author": "Tasnimul Hasan",
  "_description": "Organized VS Code settings (9 sections)",

  "__SECTION_1_EDITOR_ESSENTIALS": "Font, Indentation, Line Numbers",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 18,
  "editor.lineHeight": 1.4,
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.lineNumbers": "relative",
  "editor.autoIndent": "full",

  "__SECTION_2_EDITOR_BEHAVIOR": "Auto-save, Formatting, Whitespace",
  "files.autoSave": "onWindowChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.trimAutoWhitespace": true,
  "editor.renderWhitespace": "boundary",
  "editor.cursorBlinking": "solid",

  "__SECTION_3_DISPLAY_LAYOUT": "UI, Sidebar, Preview, Minimap",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "hidden",
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.glyphMargin": false,
  "editor.renderLineHighlight": "line",
  "editor.bracketPairColorization.enabled": true,

  "__SECTION_4_NAVIGATION_CURSOR": "Scrolling, Selection, Movement",
  "editor.cursorSurroundingLines": 2,
  "editor.cursorSurroundingLinesStyle": "default",
  "editor.smoothScrolling": true,
  "editor.fastScrollSensitivity": 5,

  "__SECTION_5_THEME_COLORS": "Theme, Icons, Customizations",
  "workbench.colorTheme": "Ardent (contrast 0, chroma 1, lightness 1)",
  "workbench.iconTheme": "symbols",
  "workbench.colorCustomizations": {
    "[Ardent (contrast 0, chroma 0, lightness 1)]": {
      "editorLineNumber.activeForeground": "#c193d4",
      "editorCursor.foreground": "#c193d4",
      "editorCursor.background": "#0f0712"
    }
  },
  "editor.tokenColorCustomizations": {
    "[Ardent (contrast 0, chroma 0, lightness 1)]": {
      "textMateRules": [
        {
          "name": "JSON property names",
          "scope": "support.type.property-name.json",
          "settings": {
            "foreground": "#E2725B"
          }
        },
        {
          "name": "Comments",
          "scope": [
            "comment",
            "punctuation.definition.comment",
            "punctuation.definition.comment.cpp"
          ],
          "settings": {
            "foreground": "#4e525a",
            "fontStyle": "italic"
          }
        }
      ]
    }
  },

  "__SECTION_6_LANGUAGE_FORMATTERS": "JSON, TypeScript, JavaScript",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "__SECTION_7_VIM_CONFIGURATION": "Keybindings, Highlighting",
  "vim.leader": " ",
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "hsla(282, 25%, 80%, 0.3)",
  "vim.highlightedyank.textColor": "hsl(282, 43%, 70%)",
  "vim.highlightedyank.duration": 300,
  "vim.handleKeys": {
    "<C-b>": false,
    "<C-p>": false
  },
  "vim.normalModeKeyBindings": [
    {
      "before": ["j"],
      "after": ["g", "j"],
      "description": "Move down (wrap-aware)"
    },
    {
      "before": ["k"],
      "after": ["g", "k"],
      "description": "Move up (wrap-aware)"
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y", "y"],
      "description": "Yank line to system clipboard"
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "+", "p"],
      "description": "Paste from clipboard after"
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": ["j"],
      "after": ["g", "j"],
      "description": "Move down (wrap-aware)"
    },
    {
      "before": ["k"],
      "after": ["g", "k"],
      "description": "Move up (wrap-aware)"
    },
    {
      "before": ["<leader>", "y"],
      "after": ["\"", "+", "y"],
      "description": "Yank selection to clipboard"
    },
    {
      "before": ["<leader>", "p"],
      "after": ["\"", "+", "p"],
      "description": "Paste from clipboard after"
    },
    {
      "before": ["<leader>", "P"],
      "after": ["\"", "+", "P"],
      "description": "Paste from clipboard before"
    }
  ],

  "__SECTION_8_TERMINAL_GIT": "Git & Terminal Configuration",
  "git.openRepositoryInParentFolders": "never",
  "terminal.integrated.stickyScroll.enabled": false,

  "__SECTION_9_WINDOW_WORKBENCH": "Title Bar, Controls, Explorers",
  "window.titleBarStyle": "custom",
  "window.controlsStyle": "custom",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "github.copilot.nextEditSuggestions.enabled": true
}
